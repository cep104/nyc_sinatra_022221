<h2>Edit Historical Landmark</h2>
<form method="POST" action="/landmarks/<%= @landmark.id %>">
<input type="hidden" name="_method" value="PATCH" />
<label for="landmark_name">Name: </label>
<input type="text" name="landmark[name]" id="name" value="<%=@landmark.name %>">
<input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed %>>
<h3>Existing Figures</h3>
  <% @figures.each do |figure| %>
    <input type="radio" name="landmark[figure_id]" id="<%= figure.id %>" value="<%= figure.id %>"><%= figure.name %></input><br>
  <% end %>
  <br>

  <h3>New Figure</h3>
  <label>Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name"></input>
  <br><br>
  <input type="submit" value="Edit Landmark">
</form>
